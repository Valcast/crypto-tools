{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "build", ".vite"],
    "types": ["react", "react-dom", "node"]
}
